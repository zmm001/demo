@model Nop.Plugin.Widgets.ProductLabel.Models.ProductLabelViewModel
@using System.Web.Mvc.Html
@using Nop.Web.Framework;
@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.TagId)
@if (ViewBag.RefreshPage == true)
{
    <script type="text/javascript">
        try {
            window.opener.document.forms['@(ViewBag.formId)'].@(ViewBag.btnId).click();
        } catch (e) {
        }
        window.close();
    </script>
}
else
{
    <div class="tab-content">
        @Html.RenderBootstrapTabContent("tab-info", @TabInfo(), true)
    </div>

    @helper TabInfo()
    {
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">

                    @(Html.LocalizedEditor<Nop.Plugin.Widgets.ProductLabel.Models.ProductLabelViewModel, Nop.Plugin.Widgets.ProductLabel.Models.ProductLabelLocalizedModel>("category-info-localized",
                                                    @<div>

                                                        <div class="form-group">
                                                            <div class="col-md-3">
                                                                @Html.NopLabelFor(model => model.Locales[item].Name)
                                                            </div>
                                                            <div class="col-md-9">
                                                                @Html.NopEditorFor(model => model.Locales[item].Name)
                                                            </div>
                                                        </div>

                                                        <div class="form-group">
                                                            <div class="col-md-3">
                                                                @Html.NopLabelFor(model => model.Locales[item].MetaTitle)
                                                            </div>
                                                            <div class="col-md-9">
                                                                @Html.NopEditorFor(model => model.Locales[item].MetaTitle)
                                                                @Html.ValidationMessageFor(model => model.Locales[item].MetaTitle)
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <div class="col-md-3">
                                                                @Html.NopLabelFor(model => model.Locales[item].MetaKeywords)
                                                            </div>
                                                            <div class="col-md-9">
                                                                @Html.NopEditorFor(model => model.Locales[item].MetaKeywords)
                                                                @Html.ValidationMessageFor(model => model.Locales[item].MetaKeywords)
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <div class="col-md-3">
                                                                @Html.NopLabelFor(model => model.Locales[item].MetaDescription)
                                                            </div>
                                                            <div class="col-md-9">
                                                                @Html.NopEditorFor(model => model.Locales[item].MetaDescription)
                                                                @Html.ValidationMessageFor(model => model.Locales[item].MetaDescription)
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <div class="col-md-3">
                                                                @Html.NopLabelFor(model => model.Locales[item].Content)
                                                            </div>
                                                            <div class="col-md-9">
                                                                @Html.EditorFor(model => model.Locales[item].Content, "RichEditor")
                                                                @Html.ValidationMessageFor(model => model.Locales[item].Content)
                                                            </div>
                                                        </div>
                                                        @Html.HiddenFor(model => model.Locales[item].LanguageId)
                                                    </div>
  ,
                                        @<div>
                                            <div class="form-group">
                                                <div class="col-md-3">
                                                    @Html.NopLabelFor(model => model.Name)
                                                </div>
                                                <div class="col-md-9">
                                                    @Html.NopEditorFor(model => model.Name)
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-3">
                                                    @Html.NopLabelFor(model => model.MetaTitle)
                                                </div>
                                                <div class="col-md-9">
                                                    @Html.NopEditorFor(model => model.MetaTitle)
                                                    @Html.ValidationMessageFor(model => model.MetaTitle)
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-3">
                                                    @Html.NopLabelFor(model => model.MetaKeywords)
                                                </div>
                                                <div class="col-md-9">
                                                    @Html.NopEditorFor(model => model.MetaKeywords)
                                                    @Html.ValidationMessageFor(model => model.MetaKeywords)
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-3">
                                                    @Html.NopLabelFor(model => model.MetaDescription)
                                                </div>
                                                <div class="col-md-9">
                                                    @Html.NopEditorFor(model => model.MetaDescription)
                                                    @Html.ValidationMessageFor(model => model.MetaDescription)
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-3">
                                                    @Html.NopLabelFor(model => model.Content)
                                                </div>
                                                <div class="col-md-9">
                                                    @Html.EditorFor(model => model.Content, "RichEditor")
                                                    @Html.ValidationMessageFor(model => model.Content)
                                                </div>
                                            </div>
                                        </div>
))
                </div>
            </div>
        </div>

    }
}
