@model Nop.Plugin.Widgets.Customized.Models.WidgetsCustomizedRecordModel
@using System.Web.Mvc.Html
@using Nop.Web.Framework;
@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)
@if (ViewBag.RefreshPage == true)
{
    <script type="text/javascript">
        try {
            window.opener.document.forms['@(ViewBag.formId)'].@(ViewBag.btnId).click();
        } catch (e) {
        }
        window.close();
    </script>
}
else
{

    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-sm-3">
                        @Html.NopLabelFor(model => model.WidgetZone)
                    </div>
                    <div class="col-sm-9">
                        @Html.NopEditorFor(model => model.WidgetZone)
                        @Html.ValidationMessageFor(model => model.WidgetZone)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3">
                        @Html.NopLabelFor(model => model.StoreId)
                    </div>
                    <div class="col-sm-9">
                        @Html.NopDropDownListFor(model => model.StoreId, Model.AvailableStores)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3">
                        @Html.NopLabelFor(model => model.LanguageId)
                    </div>
                    <div class="col-sm-9">
                        @Html.NopDropDownListFor(model => model.LanguageId, Model.AvailableLanguages)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3">
                        @Html.NopLabelFor(model => model.AdditionalData)
                    </div>
                    <div class="col-sm-9">
                        @Html.NopEditorFor(model => model.AdditionalData)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3">
                        @Html.NopLabelFor(model => model.Content)
                    </div>
                    <div class="col-sm-9">
                        @Html.NopTextAreaFor(model => model.Content)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3">
                        @Html.NopLabelFor(model => model.Order)
                    </div>
                    <div class="col-sm-9">
                        @Html.NopEditorFor(model => model.Order)
                        @Html.ValidationMessageFor(model => model.Order)
                    </div>
                </div>

            </div>
        </div>
    </div>

    
}

