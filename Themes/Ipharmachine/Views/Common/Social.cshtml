@model Nop.Web.Models.Common.SocialModel
<ul class="top-networks list-inline">
    @if (!string.IsNullOrEmpty(Model.FacebookLink))
    {
        <li><a href="@Model.FacebookLink" class="facebook" target="_blank" rel="nofollow">@T("Footer.FollowUs.Facebook")</a></li>
    }
    @if (!string.IsNullOrEmpty(Model.TwitterLink))
    {
        <li><a href="@Model.TwitterLink" class="twitter" target="_blank" rel="nofollow">@T("Footer.FollowUs.Twitter")</a></li>
    }
    @if (Model.NewsEnabled)
    {
        <li><a href="@Url.RouteUrl("NewsRSS", new {languageId = Model.WorkingLanguageId})" class="rss" target="_blank" rel="nofollow">@T("Footer.FollowUs.RSS")</a></li>
    }
    @if (!string.IsNullOrEmpty(Model.YoutubeLink))
    {
        <li><a href="@Model.YoutubeLink" class="youtube" target="_blank" rel="nofollow">@T("Footer.FollowUs.Youtube")</a></li>
    }
    @if (!string.IsNullOrEmpty(Model.GooglePlusLink))
    {
        <li><a href="@Model.GooglePlusLink" class="google" target="_blank" rel="nofollow">@T("Footer.FollowUs.GooglePlus")</a></li>
    }
    <li><a href="javascript:;" class="wechat" target="_blank" rel="nofollow">wechat</a></li>
</ul>
