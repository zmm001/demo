@model PasswordRecoveryConfirmModel
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
    //page class
    Html.AppendPageCssClassParts("html-password-recovery-page");
    Html.AddCssFileParts("~/Themes/Store/Content/css/pages/register.css");
}
@using Nop.Web.Models.Customer;
<div class="account-number">
    <h1 class="account-title">@T("Account.PasswordRecovery")</h1>
    <div class="container">
        @if (!String.IsNullOrEmpty(Model.Result)) {
            <div class="result">
                @Model.Result
            </div>
        }
        else
        {
            <div class="row">
                <div class="mycol col-xs-12">
                    <div class="account-box-container">
                        <form action="@Request.Url.PathAndQuery" method="post" class="form-horizontal account-submit" novalidate="novalidate">
                            @Html.AntiForgeryToken()
                            <div class="form-container">
                                <div class="form-group">
                                    <label for="@Html.IdFor(m=>m.NewPassword)" class="col-sm-4 control-label">@Html.RequiredHint() @Html.DisplayNameFor(m => m.NewPassword):</label>
                                    <div class="col-sm-4">
                                        @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control inputs" })
                                        <div class="error tips">@Html.ValidationMessageFor(model => model.NewPassword)</div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="@Html.IdFor(m=>m.ConfirmNewPassword)" class="col-sm-4 control-label">@Html.RequiredHint() @Html.DisplayNameFor(m => m.ConfirmNewPassword):</label>
                                    <div class="col-sm-4">
                                        @Html.PasswordFor(model => model.ConfirmNewPassword, new { @class = "form-control inputs" })
                                        <div class="error tips">@Html.ValidationMessageFor(model => model.ConfirmNewPassword)</div>
                                    </div>
                                </div>
                            </div>
                            <input type="submit" name="set-password" class="buttons" value="@T("Account.PasswordRecovery.ChangePasswordButton")" />
                        </form>
                    </div>
                </div>
            </div>
        }
        
    </div>
</div>

