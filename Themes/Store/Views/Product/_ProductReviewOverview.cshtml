@model ProductReviewOverviewModel
@using System.Globalization
@using Nop.Web.Models.Catalog;
@{
    int ratingPercent = 100;
    if (Model.TotalReviews != 0)
    {
        ratingPercent = ((Model.RatingSum * 100) / Model.TotalReviews) / 5;
    }
}
@if (Model.AllowCustomerReviews)
{
    <div class="product-reviews-overview">
        <div class="product-review-box">
            <div class="rating" style="width: @(ratingPercent)%">
            </div>
        </div>

        @if (Model.TotalReviews > 0)
        {
            <div class="product-review-links">
                <a href="#review-content">
                    @Model.TotalReviews
                    @T("Reviews.Overview.Reviews")
                </a> <span class="separator">|</span> <a href="#review-form">@T("Reviews.Overview.AddNew")</a>
            </div>
        }
        else
        {
            <div class="product-no-reviews">
                <a href="#review-form">@T("Reviews.Overview.First")</a>
            </div>
        }
    </div>
}