@model CustomerNavigationModel           
@using Nop.Web.Models.Customer;

<div class="product-toggle" data-toggle="leftbox">
    <div class="toggle-title">
        <strong class="toggle-strong">@T("Account.Navigation")</strong>
        <span class="iconfont icon-jia"></span>
    </div>
    <ul class="toggle-list">
        @Html.Widget("account_navigation_before")
        @foreach (var item in Model.CustomerNavigationItems)
        {
            <li class="@item.ItemClass @(Model.SelectedTab == item.Tab ? "active" : "")">
                <a href="@Url.RouteUrl(item.RouteName)" >@(item.Title)</a>
            </li>
        }
        @Html.Widget("account_navigation_after")
    </ul>
</div>